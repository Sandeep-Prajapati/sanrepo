pipeline {
    agent any 
    stages {
        stage('Stage 1') {
            steps {
                sh "date"
                sh "echo $HOME , welcome ....."
                sh "echo $USER"
                echo 'Hello world! ...' 
                sh "pwd"
                echo "This is a sample print line."
                echo "$HOME"
                echo "$USER"
                echo "$SHELL"
                sh "pwd"
                sh "ls"
            }
        }
    }
}
